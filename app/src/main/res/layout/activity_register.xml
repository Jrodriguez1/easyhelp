<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_backgroud"
    tools:context="com.team1.easyhelp.account.RegisterActivity">

    <EditText
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/edit_phoneNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/custom_edit_text_shape"
        android:hint="请输入手机号"
        android:textSize="16sp"
        android:textColorHint="#86aa9f"
        android:textColor="#f36c60" />

    <EditText
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/edit_request_code"
        android:layout_below="@+id/edit_phoneNum"
        android:layout_alignStart="@+id/edit_phoneNum"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_edit_text_shape"
        android:hint="请输入验证码"
        android:textSize="16sp"
        android:textColorHint="#86aa9f"
        android:textColor="#f36c60" />

    <Button
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/button_submit"
        android:layout_below="@+id/edit_request_code"
        android:layout_alignStart="@+id/edit_request_code"
        android:layout_marginTop="42dp"
        android:text="获取验证码"
        android:textSize="16sp"
        android:textColor="#b1deda"
        android:background="@drawable/login_button_actionup_shape"/>

</RelativeLayout>
