<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_backgroud"
    tools:context="com.team1.easyhelp.account.setPasswordActivity">

    <EditText
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/custom_edit_text_shape"
        android:hint="请输入新的密码"
        android:textSize="16sp"
        android:textColorHint="#86aa9f"
        android:textColor="#fdaa90"
        android:password="true" />

    <EditText
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/edit_password2"
        android:layout_below="@+id/edit_password"
        android:layout_alignStart="@+id/edit_password"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_edit_text_shape"
        android:hint="再次输入该密码"
        android:textSize="16sp"
        android:textColorHint="#86aa9f"
        android:textColor="#fdaa90"
        android:password="true" />

    <Button
        android:layout_width="@dimen/editText_width_long"
        android:layout_height="@dimen/editText_height"
        android:id="@+id/button_submit"
        android:onClick="submitPasswordClick"
        android:layout_below="@+id/edit_password2"
        android:layout_alignStart="@+id/edit_password2"
        android:layout_marginTop="42dp"
        android:text="确认提交"
        android:textSize="16sp"
        android:textColor="#b1deda"
        android:background="@drawable/login_button_actionup_shape"/>

</RelativeLayout>
